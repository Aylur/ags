{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2017"
        ],
        "allowJs": true,
        "checkJs": false,
        "outDir": "_build/tsc-out",
        "strict": true,
        "moduleResolution": "Bundler",
        "declaration": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "types/gtk-types/*.ts",
        "src/**/*"
    ],
    "exclude": [
        "types/gtk-types/dom.d.ts"
    ]
}