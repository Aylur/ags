{
    "compilerOptions": {
        "target": "es2022",
        "module": "ES2020",
        "lib": [
            "ES2017"
        ],
        "allowJs": true,
        "checkJs": false,
        "outDir": "_build/tsc-out",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "types/*",
                "gi-types/*"
            ]
        },
        "typeRoots": [
            "gi-types"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "gi-types/gi.d.ts",
        "types/*",
        "src/*",
        "src/*/*"
    ]
}
